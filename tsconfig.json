{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "outDir": "bin",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listFiles": false,
    "diagnostics": false,
    "module": "commonjs",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@src/*": ["./src/*"],
      "@domain/*": ["./src/Domain/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts", "src/**/*.js", "prettier.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
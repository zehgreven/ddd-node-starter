{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "outDir": "bin",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listFiles": false,
    "diagnostics": false,
    "module": "commonjs",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@domain/*": ["./src/Domain/*"],
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "compileOnSave": true,
  "include": [
    "src/**/*.ts", "src/**/*.js", "prettier.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}